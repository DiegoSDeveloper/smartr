{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "dist",
    // ✅ Adicione estas linhas para CSS Modules
    "module": "ESNext",
  },
  "include": ["src", "src/**/*.d.ts"], // ✅ Inclui arquivos de tipos
  "exclude": ["node_modules", "dist"]
}